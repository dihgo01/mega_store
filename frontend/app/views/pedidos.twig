{% extends 'templates/main.twig' %}
{% block title %}Mega Store{% endblock %}

{% block content %}

    {# SE UM ID ALVO NAO FOR INFORMADO NO UPDATE, USUARIO Ã‰ REDIRECIONADO #}
    {% if url.parametros.var3 == 'update' and url.parametros.var4 is empty %}
        {% set urlRedirect = '/' ~ url.parametros.var1 ~ '/' ~ url.parametros.var2 ~ '/list' %}
        <script>window.location = '{{ urlRedirect }}';</script>
    {% else %}
        {# CARREGA PAGINA SOLICITADA #}
        {% if url.parametros.var3 is not empty %}
            {% include('/' ~ url.parametros.var1 ~ '/' ~ url.parametros.var2 ~ '/' ~ url.parametros.var3 ~ '.twig') %}
        {% else %}
            {% include('/' ~ url.parametros.var1 ~ '/' ~ url.parametros.var2 ~ '/' ~ url.parametros.var2 ~ '.twig') %}
        {% endif %}
       
    {% endif %}
    
    {# CARREGA SIDEBAR DO CARRINHO EM TODAS PAGINAS DO MODULO PDV #}
    {% if url.parametros.var1 == 'pedidos' and url.parametros.var2 == 'vendas' %}
        {% include('/' ~ url.parametros.var1 ~ '/shopcart.twig') %}
    {% endif %}

{% endblock %}
