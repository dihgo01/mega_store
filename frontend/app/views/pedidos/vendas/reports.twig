                                                                            <input type="text" class="form-control inputCalendario"  name="dataAte" id="dataAte" placeholder="00/00/0000" data-date-format="dd/mm/yyyy" value="{{ "now"|date("d/m/Y") }}" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div> 
                                                            <div class="col-12">
                                                                <div class="form-group">
