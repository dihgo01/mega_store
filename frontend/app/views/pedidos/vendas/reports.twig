                                                                        {% endfor %}
                                                                    </select>
                                                                </div>
                                                            </div>                                  
                                                            <div class="col-12">
                                                                <div class="form-group">
                                                                    <button type="button" id="btFiltrarVendas" class="btn btn-secondary d-block w-100">Filtrar</button>
